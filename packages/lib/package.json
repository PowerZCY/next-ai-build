{
  "name": "@windrun-huaiin/lib",
  "version": "7.0.0",
  "description": "Common utilities and configuration",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.js"
    },
    "./llm-utils": {
      "types": "./dist/llm-utils.d.ts",
      "import": "./dist/llm-utils.mjs",
      "require": "./dist/llm-utils.js"
    },
    "./common-app-config": {
      "types": "./dist/common-app-config.d.ts",
      "import": "./dist/common-app-config.mjs",
      "require": "./dist/common-app-config.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "build:prod": "rollup -c rollup.config.mjs",
    "dev": "rollup -c rollup.config.mjs --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src"
  },
  "dependencies": {
    "date-fns": "2.30.0",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-mdx": "^3.1.0",
    "remark-frontmatter": "^5.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "@types/node": "^22.15.18",
    "@types/react": "19.1.2"
  },
  "peerDependencies": {
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "keywords": [
    "utilities",
    "config",
    "typescript",
    "react",
    "nextjs"
  ],
  "author": "windrun-huaiin",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
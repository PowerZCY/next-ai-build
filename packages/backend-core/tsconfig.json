{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "incremental": false,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/db": ["./services/database"],
      "@/db/*": ["./services/database/*"],
      "@/aggregate/*": ["./services/aggregate/*"],
      "@/context/*": ["./services/context/*"],
      "@/stripe/*": ["./services/stripe/*"],
      "@/lib/*": ["./lib/*"],
      "@/prisma/*": ["./prisma/*"],
      "@backend-core/*": ["./*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}

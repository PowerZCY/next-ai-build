{
  "name": "@windrun-huaiin/base-ui",
  "version": "6.0.3",
  "description": "Base UI components for windrun-huaiin projects",
  "type": "module",
  "exports": {
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "import": "./dist/ui/index.mjs",
      "require": "./dist/ui/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs",
      "require": "./dist/components/index.js"
    },
    "./components/server": {
      "types": "./dist/components/server.d.ts",
      "import": "./dist/components/server.mjs",
      "require": "./dist/components/server.js"
    },
    "./src/*": "./src/*",
    "./styles/base-ui.css": "./dist/base-ui.css"
  },
  "files": [
    "src",
    "dist",
    "package.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build:css": "postcss src/styles/base-ui.css -o dist/base-ui.css",
    "build": "tsup && pnpm build:css",
    "build:prod": "tsup && pnpm build:css",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.13",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-slot": "^1.2.2",
    "@windrun-huaiin/lib": "workspace:^",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.525.0"
  },
  "peerDependencies": {
    "clsx": "^2.0.0",
    "next": "15.3.2",
    "next-intl": "^3.26.5",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.0.0",
    "tailwindcss": "^4.1.7"
  },
  "devDependencies": {
    "typescript": "^5.8.3",
    "tsup": "^8.3.5",
    "@types/node": "catalog:",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "nextjs",
    "radix-ui",
    "tailwindcss"
  ],
  "author": "windrun-huaiin",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}